{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "outDir": "dist",
    "declaration": true,
    "types": [
      "mocha",
      "node"
    ]
  },

  "exclude": [
    "node_modules",
    "dist"
  ]
}
